<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.android.background">
    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Điều này là cần thiết cho việc đồng bộ ngay lập tức -->
        <service
            android:name=".sync.WaterReminderIntentService"
            android:exported="false"/>
        <!-- TODO (14) Thêm WaterReminderFirebaseJobService ở đây. Nó sẽ không được xuất ra và
        sẽ có intent filter cho action com.firebase.jobdispatcher.ACTION_EXECUTE -->
    </application>

</manifest>